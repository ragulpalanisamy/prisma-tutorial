generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//user model
model User {
  id               Int             @id @default(autoincrement())
  name             String
  age              Int
  email            String          @unique
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  isAdmin          Boolean
  perference       Json
  userPreference   UserPreference? @relation(fields: [userPerferenceId], references: [id])
  userPerferenceId String?         @unique
  //writternPosts  post[] @relation("WritternPosts")
  //favoritePosts  Post[] @relation("FavoritePosts")

  //block-level attribute 
  @@unique([name, age])
  @@index([email])
}

//single
model UserPreference {
  id            String  @id @default(uuid())
  emailUpadates Boolean
  user          User?
}

//posts model
model post {
  id         Int        @id @default(autoincrement())
  rating     Decimal
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  //author    User     @relation("WritternPosts",fields: [autherId], references: [id])
  //authorId    String
  //favortiePosts    User?     @relation("FavoritePosts",fields: [favoriteById], references: [id])
  //favoriteById    String?
  categories Category[]
}

//many
model Category {
  id    String @id @default(uuid())
  Posts post[]
}

enum Role {
  BASIC
  ADMIN
}
